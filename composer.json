{
    "name":        "KazuakiM/bardiche",
    "type":        "library",
    "description": "FTP, FTPS, SFTP and SCP clients",
    "keywords":    [
        "ftp",
        "ftps",
        "sftp",
        "scp",
        "clients"
    ],
    "homepage": "https://github.com/KazuakiM/bardiche",
    "license":  "MIT",
    "authors":  [{
        "name":     "KazuakiM",
        "email":    "kazuaki_mabuchi_to_go@hotmail.co.jp",
        "homepage": "https://github.com/KazuakiM"
    }],
    "require": {
        "php": ">=7.0"
    },
    "require-dev": {
        "guzzlehttp/guzzle":      "~6.2",
        "phpunit/phpunit":        "~5.7",
        "satooshi/php-coveralls": "~1.0",
        "scrutinizer/ocular":     "~1.3"
    },
    "scripts": {
        "test": [
            "php vendor/bin/phpunit --colors=always --verbose",
            "php vendor/bin/coveralls --config=.coveralls.yml --coverage_clover=/tmp/clover.xml --verbose",
            "php vendor/bin/ocular code-coverage:upload --format=php-clover /tmp/clover.xml --verbose"
        ],
        "docs": [
            "phpunit --colors=always --coverage-clover=docs/coverage/clover.xml --coverage-html=docs/coverage --testdox-html=docs/logging.html --verbose",
            "php tests/bin/apigen.phar generate"
        ]
    },
    "autoload": {
        "psr-4": {
            "KazuakiM\\Bardiche\\": "src/"
        }
    }
}
